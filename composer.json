{
    "name": "asq/weight-conversion",
    "description": "This is my package weight-conversion",
    "keywords": [
        "asq",
        "weight-conversion"
    ],
    "homepage": "https://github.com/asq/weight-conversion",
    "license": "MIT",
    "authors": [
        {
            "name": "Shekib Quraishy",
            "email": "quraishyshekib@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "friendsofphp/php-cs-fixer": "^3.21.1",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "asq\\WeightConversion\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "asq\\WeightConversion\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
